<div>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.ID }) |
    @if (!Model.EstVendu)
    {
        <span>
            <a asp-controller="GestionCommandes" asp-action="Create" asp-route-vehicule="@Model.ID">Commander ce véhicule</a>
            |
        </span>

    }
    <a href="@Url.Action("AjouterAuxFavoris","GestionFavoris", new {idVehicule = Model.ID})">Ajouter aux favoris</a> |
    <a asp-action="Index">Retour au catalogue</a>
